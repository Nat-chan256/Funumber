<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttons">
        <item name="android:backgroundTint">@color/buttons</item>
        <item name="android:textColor">@color/app_bar</item>
    </style>

    <style name="update_button">
        <item name="android:layout_width">@dimen/update_button_size</item>
        <item name="android:layout_height">@dimen/update_button_size</item>
        <item name="android:src">@drawable/refresh</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">30</item>
    </style>
</resources>